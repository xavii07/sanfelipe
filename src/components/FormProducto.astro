---
interface Props {
  codigo?: string;
  nombre?: string;
  descripcion?: string;
  precio?: number;
  cantidad?: number;
  boton?: string;
}

const {
  codigo,
  boton = "Guardar Producto",
  cantidad,
  descripcion,
  nombre,
  precio,
} = Astro.props;
---

<form class="row g-3">
  <div class="col-md-6">
    <label for="validationCustom01" class="form-label">Codigo Producto</label>
    <input
      type="text"
      class="form-control"
      id="validationCustom01"
      placeholder="PRO3365"
      autocomplete="off"
      value={codigo}
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>
  <div class="col-md-6">
    <label for="validationCustom02" class="form-label">Nombre</label>
    <input
      autocomplete="off"
      type="text"
      class="form-control"
      id="validationCustom02"
      placeholder="Tornillos "
      value={nombre}
      required
    />
  </div>
  <div class="col-md-12">
    <label for="validationCustom03" class="form-label">Descripcion</label>
    <input
      autocomplete="off"
      type="text"
      class="form-control"
      id="validationCustom03"
      value={descripcion}
      required
    />
  </div>
  <div class="col-md-4">
    <label for="validationCustom04" class="form-label">Precio</label>
    <input
      type="number"
      class="form-control"
      id="validationCustom05"
      required
      autocomplete="off"
      min="0"
      placeholder="1.5"
      value={precio}
    />
  </div>
  <div class="col-md-4">
    <label for="validationCustom05" class="form-label">Cantidad</label>
    <input
      type="number"
      class="form-control"
      id="validationCustom05"
      autocomplete="off"
      placeholder="30"
      min="1"
      required
      value={cantidad}
    />
  </div>
  <div class="col-8 mt-4">
    <a href="/productos" class="btn boton w-100 mt-4" type="submit">{boton}</a>
  </div>
</form>

<style>
  .boton {
    background-color: #e94256;
    color: aliceblue;
    font-weight: 700;
  }
  .boton:hover {
    background-color: #e94255c0;
  }
</style>
