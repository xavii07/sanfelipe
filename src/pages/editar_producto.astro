---
import Aside from "../components/Aside.astro";
import FormProducto from "../components/FormProducto.astro";
import Layout from "../components/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="San Felipe | Editar Producto">
  <div class="container-fluid vh-100">
    <div class="row h-100">
      <div class="col-2 aside">
        <Aside />
      </div>
      <div class="col-10 main">
        <Nav />
        <div class="container">
          <div class="row">
            <div class="col-7 mx-auto">
              <h3 class="text-center py-4">Editar Producto</h3>
              <FormProducto
                boton="Editar Producto"
                cantidad={25}
                codigo="PRO5485"
                descripcion="Lampara de mesa"
                nombre="Lampara de mesa"
                precio={25}
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <style>
      .aside {
        background-color: #232a2c;
      }
      .boton {
        background-color: #e94256;
        color: aliceblue;
        font-weight: 700;
      }
      .boton:hover {
        background-color: #e94255c0;
      }
    </style>
  </div>
</Layout>
