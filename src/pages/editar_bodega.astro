---
import Aside from "../components/Aside.astro";
import FormBodega from "../components/FormBodega.astro";
import FormProducto from "../components/FormProducto.astro";
import FormProvedor from "../components/FormProvedor.astro";
import Layout from "../components/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="San Felipe | Editar Bodega">
  <div class="container-fluid vh-100">
    <div class="row h-100">
      <div class="col-2 aside">
        <Aside />
      </div>
      <div class="col-10 main">
        <Nav />
        <div class="container">
          <div class="row">
            <div class="col-7 mx-auto">
              <h3 class="text-center py-4">Editar Bodega</h3>
              <FormBodega
                nombre="A.O. Smith"
                ciudad="Guayaquil"
                telefono="0987654321"
                direccion="Av. 9 de Octubre"
                imagen="../public/ferreteria1.jpg"
                atencion_semana="08h30 a 17h00"
                atencion_fin="10h00 a 16h00"
                boton="Editar Bodega"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <style>
      .aside {
        background-color: #232a2c;
      }
      .boton {
        background-color: #e94256;
        color: aliceblue;
        font-weight: 700;
      }
      .boton:hover {
        background-color: #e94255c0;
      }
    </style>
  </div>
</Layout>
