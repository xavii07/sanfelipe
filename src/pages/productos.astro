---
import Layout from "../components/Layout.astro";
import Nav from "../components/Nav.astro";
import TablaProductos from "../components/TablaProductos.astro";
import { productos } from "../../db/productos.json";
import Aside from "../components/Aside.astro";
import Search from "../components/Search.astro";
---

<Layout title="San Felipe | Productos">
  <div class="container-fluid vh-100">
    <div class="row h-100">
      <div class="col-2 aside">
        <Aside />
      </div>
      <div class="col-10 main">
        <Nav />
        <div class="container">
          <h1 class="text-center py-4">Productos</h1>
          <div class="row my-4">
            <div class="col-4">
              <Search placeholder="Buscar Producto" />
            </div>
            <div class="col-8 d-flex h-100 justify-content-end">
              <a href="/producto_nuevo" class="btn boton">Agregar Nuevo +</a>
            </div>
            <TablaProductos productos={productos} />
          </div>
        </div>
      </div>
    </div>

    <style>
      .aside {
        background-color: #232a2c;
      }
      .boton {
        background-color: #e94256;
        color: aliceblue;
        font-weight: 700;
      }
      .boton:hover {
        background-color: #e94255c0;
      }
    </style>
  </div>
</Layout>
